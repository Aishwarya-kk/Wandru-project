<% layout("/layout/biolerplate") -%>
<style>
    .image{
        width:250px;
        height: 150px;
    }
    .head{
        margin-left:180px;
    }
</style>
<div class="row ">
    <h2 class="head">Edit Your Listing</h2>
    <div class="col-8 offset-2">
    <form method="POST" action="/listing/<%= all._id %>?_method=PUT">
        <div class="md-3">
            <label for="title" class="form-label">Title:</label>
        <input name="listing[title]" value="<%= all.title %>" type="text" class="form-control">
        </div>
        <div class="md-3">
             <label for="description" class="form-label">Description:</label>
        <textarea name="listing[description]"<%= all.description %>type="text" class="form-control" id="description" col=30></textarea>
        <br>
     </div class="md-3">
     Original Listing Image:<br>
     <img src="<%= all.image %>" alt="" class="image">
     <div >
     

     </div>
     <div class="md-3">
        <label for="image" class="form-label">image Link</label>
         <input name="listing[image]" value="<%= all.image %>" type="text"class="form-control">
      
       </div>
<div class="row">
       <div class="md-3 col-4">
        <label for="price" class="form-label">price</label>
         <input name="listing[price]" value="<%= all.price %>" type="number" class="form-control">
       </div >
       <div class="md-3 col-8">
        <label for="location" class="form-label">location</label>
         <input name="listing[location]" value="<%= all.location %>" type="text" class="form-control">
        </div>
        </div>
        <div class="md-3">
            <label for="country" class="form-label">country</label>
 <input name="listing[country]" value="<%= all.country %>" type="text" class="form-control">
       </div>
       <br>
       <br><br>
        <button class="btn btn-dark">Edit</button>
    </form>
    </div>
    </div>

<div class="col-8 offset-2">
  <h2>Leave A Reveiew</h2>
   <form action="/listings/<%= all._id %>/reveiws" method="post" novalidate class="needs-validation">
  <div class="mb-3 mt-3">
    <label for="rating" class="form-label">Rating</label>
    <!-- <input type="range" id="rating" name="reveiew[rating]" min="1" max="5" class="form-range"> -->
     <fieldset class="starability-basic">
      <input type="radio" id="no-rate" class="input-no-rate" name="reveiew[rating]" value="0" checked aria-label="No rating." />
      <input type="radio" id="rate1" name="reveiew[rating]" value="1" />
      <label for="rate1">1 star.</label>

      <input type="radio" id="rate2" name="reveiew[rating]" value="2" />
      <label for="rate2">2 stars.</label>

      <input type="radio" id="rate3" name="reveiew[rating]" value="3" />
      <label for="rate3">3 stars.</label>

      <input type="radio" id="rate4" name="reveiew[rating]" value="4" />
      <label for="rate4">4 stars.</label>

      <input type="radio" id="rate5" name="reveiew[rating]" value="5" />
      <label for="rate5">5 stars.</label>

      <span class="starability-focus-ring"></span>
    </fieldset>
    </div>
    
   <div>
      <label for="comment" class="form-label">comment</label>
      <textarea name="reveiew[comment]" id="comment" cols="30" rows="6" class="form-control" required></textarea>
      <div class="invalid-feedback">please submit some command</div>
   </div>
  
     <button class="btn btn-outline-dark">submit</button>

  </form>

  <hr>
